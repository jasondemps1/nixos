{
	programs.foot = {
		enable = true;
		settings = {
			main = {
				#term = "xterm-256color";
				font = "IBM Plex Mono:size=13";
				#dpi-aware = "yes";
				#pad="10x10";
			};

			csd = {
				border-width = 2;
				border-color = "ff404040";
			};

			mouse = {
				hide-when-typing = "no";
			};

			colors = {
				alpha=".9";
			};
		};
	};
}
